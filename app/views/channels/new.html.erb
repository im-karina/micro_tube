<div>
  <h1 class="font-bold text-4xl">Channel#new</h1>
  <p>Find me in app/views/channel/new.html.erb</p>
  <%= form_with model: @channel do |form| %>
    <%= form.label :name do %>
      <%= t('channels.new.name') %>: <%= form.text_field :name %>
    <% end %>

    <%= form.label :thumbnail_image do %>
      <%= t('channels.new.thumbnail_image') %>: <%= form.file_field :thumbnail_image %>
    <% end %>

    <%= form.submit t('channels.new.submit') %>
  <% end %>
</div>
