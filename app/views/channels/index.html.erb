<div class="flex flex-col gap-4">
  <h1 class="font-bold text-4xl">Channels</h1>
  <%= link_to t('channels.new.link_to'), new_channel_path %>

  <div>
    <% @channels.each do |ch| %>
      <%= link_to ch do %>
        <div class="flex gap-2">
          <%= image_tag ch.thumbnail_image, class: 'size-8 drop-shadow-md' %>
          <span class="text-lg">
            <%= ch.name %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
